{
    "name": "ERhub",
    "version": "2.0.0",
    "manifest_version": 2,
    "description": "An awesome chrome extension for github",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "homepage_url": "http://github.com/Cubeiic-HanXuan",
    "permissions": [
        "tabs",
        "*://github.com/*"
    ],
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "web_accessible_resources": ["icons/*.png", "images/*"],

    "browser_action": {
        "default_icon": "images/icon-16.png",
        "default_popup": ""
    },

    "content_scripts": [{
        "matches": [
            "*://github.com/*",
            "*://gist.github.com/*"
        ],
        "css": [
            "styles/overView.css",
            "styles/sidebarNav.css",
            "styles/loading.css",
            "styles/tableOfContent.css",
            "styles/showAvatar.css",
            "styles/copySnippet.css",
            "styles/zoom.css"
        ],
        "js": [
            "scripts/contentscript.js"
        ],
        "run_at": "document_end",
        "all_frames": false
    }]
}